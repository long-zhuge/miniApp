view, text, canvas, button {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.drawer-container {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.45);
  z-index: 99;
}

.drawer-body {
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx 15rpx 0 0;
}

.drawer-header {
  border-bottom: 1px solid #D8D8D8;
  min-height: 106rpx;
  padding: 0 16px;
  text-align: center;
  display: flex;
  line-height: 106rpx;
}

.drawer-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  text-indent: 0.52px;
  flex: 1;
}

.drawer-left-extra, .drawer-right-extra {
  flex: 0 0 30px;
}

.drawer-left-extra {
  font-size: 14px;
  color: rgba(51,51,51,0.8);
}

.drawer-content {
  padding: 16px;
}

.drawer-footer {
  padding: 0 16px 16px;
}

.drawer-footer button {
  flex: 1;
}

.clear-color {
  color: #1890ff;
  font-size: 14px;
}

.primary-button {
  font-size: 16px;
  color: #fff;
  background: linear-gradient(to right, #46A2FF, #1E86F1);
  border-radius: 40px;
}

.none {
  display: none;
}