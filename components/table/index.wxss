.table {
  border: 1px solid #f5f5f5;
  border-right: 0;
  border-bottom: 0;
  font-size: 12px;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th, .td {
  border-bottom: 1px solid #f5f5f5;
  border-right: 1px solid #f5f5f5;
  width: 100%;
  word-wrap: break-word;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.th {
  padding: 8px 4px;
  color: rgba(0,0,0,.7);
  font-weight: 400;
  background-color: #F3FAFF;
}

.td {
  padding: 4px;
  color: rgba(0,0,0,0.6);
}